# Destiny Analytical System - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# CLAUDE API (for real supervision)
# ============================================
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ============================================
# LMSTUDIO CONFIGURATION
# ============================================
LMSTUDIO_HOST=192.168.200.226
LMSTUDIO_PORT=1234
LMSTUDIO_LLM_MODEL=openai/gpt-oss-20b
LMSTUDIO_EMBEDDING_MODEL=text-embedding-multilingual-e5-large-instruct

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=destiny_analytical
POSTGRES_USER=destiny
POSTGRES_PASSWORD=destiny_dev_2024

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=destiny_embeddings

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=destiny_documents

# Neo4j
NEO4J_HOST=localhost
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=destiny_dev_2024

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# SYSTEM CONFIGURATION
# ============================================

# Supervision Mode (supervised, spot_check, autonomous)
SUPERVISION_MODE=supervised

# Vector threshold for Qdrant routing
VECTOR_THRESHOLD=100000

# Performance settings
MAX_WORKERS=4
BATCH_SIZE=100
TIMEOUT_SECONDS=120

# ============================================
# MONITORING & LOGGING
# ============================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
LOG_FILE=logs/destiny.log

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================
# FEATURE FLAGS
# ============================================

# Enable real Claude supervision
ENABLE_CLAUDE_SUPERVISION=false

# Enable specific databases
ENABLE_POSTGRES=true
ENABLE_QDRANT=false
ENABLE_ELASTICSEARCH=false
ENABLE_NEO4J=false

# ============================================
# DEVELOPMENT / PRODUCTION
# ============================================

# Environment (development, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true
